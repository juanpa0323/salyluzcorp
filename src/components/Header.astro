---
import IconX from "../../public/Icons/IconX.astro";
import IconWhatsApp from "../../public/Icons/IconWhatsApp.astro";
import IconFaceboock from "../../public/Icons/IconFaceboock.astro";
import IconInstagram from "../../public/Icons/IconInstagram.astro";
---

<header class="bg-image">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
      <a class="navbar-brand text-light" href="#">
        <img
          src="images/logo.png"
          alt=""
          width="40"
          class="d-inline-block align-text-top rounded-3"
        />
        SAL Y LUZ
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active text-light" aria-current="page" href="#"
              >Inicio</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link active text-light" aria-current="page" href="#"
              >
              Servisios</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link active text-light" aria-current="page" href="#"
              >
              Noticias</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link text-light" aria-current="page" href="#"
              >Contacto</a
            >
          </li>
        </ul>
        <div class="d-flex social-icons">
          <a
            href="https://www.instagram.com/salyluzcorp"
            target="_blank"
            class="social-icon instagram"
          >
            <IconInstagram />
          </a>
          <a
            href="https://www.facebook.com/people/Corporaci%C3%B3n-Sal-y-Luz/100069783105596/"
            target="_blank"
            class="social-icon facebook"
          >
            <IconFaceboock />
          </a>
          <a
            href="https://wa.me/573215574456"
            target="_blank"
            class="social-icon whatsapp"
          >
            <IconWhatsApp />
          </a>
          <a href="https://x.com/" target="_blank" class="social-icon twitter">
            <IconX />
          </a>
        </div>
      </div>
    </div>
  </nav>
  <div class="background-image-filter">
    <div
      id="header"
      class="container text-center d-flex flex-column justify-content-center align-items-center"
    >
      <h1 class="fw-bold mt-5 bg-warning rounded-2 px-5 text-dark">
        <span>CORPORACIÓN SAL Y LUZ</span>
      </h1>
      <p class="text-sm text-primary bg-warning rounded-2 px-5">
        Organización juvenil Cultural y Comunitaria
      </p>
    </div>
  </div>
</header>
<style>
  /* Estilo base para la barra de navegación */

  .navbar {
    background-color: #0044cc;
    padding: 10px 20px;
  }
  .nav-link {
    display: inline-block;
    position: relative;
    color: #333;
    text-decoration: none;
    padding: 0 4px;
  }

  .nav-link:before,
  .nav-link:after {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    transform: scale(0);
    transition: 0.5s;
  }

  .nav-link:before {
    border-bottom: 2px solid #ffd700;
    border-left: 2px solid #ffd700;
    transform-origin: 0 100%;
  }

  .nav-link:after {
    border-top: 2px solid #ffd700;
    border-right: 2px solid #ffd700;
    transform-origin: 100% 0%;
  }

  .nav-link:hover:after,
  .nav-link:hover:before {
    transform: scale(1);
  }



  /*Titulo e imagen de fondo */
  .background-image-filter {
    width: 100%;
    height: 500px;
    background: linear-gradient(
        rgba(25, 68, 223, 0.5),
        rgba(255, 255, 0, 0.351)
      ),
      url("images/fondo_inicio2.png");
    background-size: cover;
    background-position: center;
    position: relative;
  }

  #header {
    z-index: 2; /* Asegura que el texto esté por encima del filtro */
  }

  h1,
  p {
    z-index: 3; /* Mayor que el del header para asegurar visibilidad */
    position: relative;
    /* Opcional: Añadir sombra para mejorar legibilidad */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  /* Estilo para los íconos sociales */
  .social-icon {
    color: #fff;
    margin-left: 15px;
    transition:
      transform 0.3s ease,
      color 0.3s ease;
  }

    /* Íconos sociales */
    .social-icons a {
    color: #fff; /* Color de los íconos */
    margin-left: 15px; /* Espaciado entre íconos */
    transition:
      transform 0.3s ease,
      color 0.3s ease;
  }



  /* iconos redes sociales nav */
  .social-icons {
    gap: 5px; /* Espacio entre los iconos */
  }

  .social-icon {
    color: #fff; /* Color blanco para los iconos */
    background-color: #000; /* Fondo negro para los iconos */
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    text-decoration: none;
    transition:
      background-color 0.3s,
      transform 0.3s;
  }

  .social-icon:hover {
    transform: scale(
      1.1
    ); /* Aumenta ligeramente el tamaño al pasar el cursor */
  }

  .instagram {
    background-color: #e4405f;
  }
  .facebook {
    background-color: #1877f2;
  }
  .whatsapp {
    background-color: #25d366;
  }
  .twitter {
    background-color: black;
  }
</style>
